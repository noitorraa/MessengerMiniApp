<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMiniApp.CustomControls.BorderedEntry">
    <VerticalStackLayout Spacing="0">
        <Frame BackgroundColor="#E4E4E7"
               Padding="16,4"
               HasShadow="False"
               CornerRadius="4">
            <Grid ColumnDefinitions="Auto,*">
                <BoxView x:Name="Cursor"
                         WidthRequest="1"
                         HeightRequest="16"
                         Color="#65558F"
                         VerticalOptions="Center"
                         HorizontalOptions="Start" />
                <Entry x:Name="EntryField"
                       Grid.Column="1"
                       Placeholder="{Binding Placeholder}"
                       IsPassword="{Binding IsPassword}"
                       PlaceholderColor="#49454F"
                       TextColor="#49454F"
                       FontFamily="Roboto"
                       FontSize="16"
                       Margin="8,0,0,0"
                       BackgroundColor="Transparent" />
            </Grid>
        </Frame>
        <BoxView x:Name="BottomLine"
                 HeightRequest="3"
                 BackgroundColor="#64748B"
                 HorizontalOptions="Fill" />
        <Label x:Name="SupportingText"
               Text="{Binding SupportText}"
               TextColor="#3F3F46"
               FontSize="12"
               Margin="16,4,0,0" />
    </VerticalStackLayout>
</ContentView>
