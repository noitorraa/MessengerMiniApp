<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMiniApp.Pages.LoginPage"
             Title="LoginPage"
             BackgroundColor="{DynamicResource PrimaryColor}">
    <ContentPage.Content>
    <Grid>
        <!-- App Title -->
        <Label Text="MessengerApp"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,57,0,0" />

        <!-- Hero Image -->
        <Image Source="texting_communication.png"
               Aspect="AspectFill"
               HorizontalOptions="Fill"
               VerticalOptions="Start"
               Margin="0,96,0,0"
               HeightRequest="391" />

        <!-- Login Form -->
        <VerticalStackLayout Margin="33,514,33,0"
                             Spacing="32"
                             HorizontalOptions="Center"
                             WidthRequest="328">

            <!-- Login Input -->
            <VerticalStackLayout Spacing="0">
                <Frame BackgroundColor="#E4E4E7"
                       Padding="16,4"
                       HasShadow="False"
                       CornerRadius="4">
                    <Grid ColumnDefinitions="Auto,*">
                        <BoxView WidthRequest="1"
                                 HeightRequest="16"
                                 Color="#65558F"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Start" />
                        <Entry Grid.Column="1"
                               Placeholder="Логин"
                               PlaceholderColor="#49454F"
                               TextColor="#49454F"
                               FontFamily="Roboto"
                               FontSize="16"
                               Margin="8,0,0,0"
                               BackgroundColor="Transparent" />
                    </Grid>
                </Frame>
                <BoxView HeightRequest="3"
                         BackgroundColor="#64748B"
                         HorizontalOptions="Fill" />
                <Label Text="Supporting text"
                       TextColor="#3F3F46"
                       FontSize="12"
                       Margin="16,4,0,0" />
            </VerticalStackLayout>

            <!-- Password Input -->
            <VerticalStackLayout Spacing="0">
                <Frame BackgroundColor="#E4E4E7"
                       Padding="16,4"
                       HasShadow="False"
                       CornerRadius="4">
                    <Grid ColumnDefinitions="Auto,*">
                        <BoxView WidthRequest="1"
                                 HeightRequest="16"
                                 Color="#65558F"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Start" />
                        <Entry Grid.Column="1"
                               Placeholder="Пароль"
                               IsPassword="True"
                               PlaceholderColor="#49454F"
                               TextColor="#49454F"
                               FontFamily="Roboto"
                               FontSize="16"
                               Margin="8,0,0,0"
                               BackgroundColor="Transparent" />
                    </Grid>
                </Frame>
                <BoxView HeightRequest="3"
                         BackgroundColor="#64748B"
                         HorizontalOptions="Fill" />
                <Label Text="Supporting text"
                       TextColor="#3F3F46"
                       FontSize="12"
                       Margin="16,4,0,0" />
            </VerticalStackLayout>

            <!-- Login Button -->
            <Button Text="Войти"
                    TextColor="White"
                    FontSize="20"
                    BackgroundColor="#FCA5A5"
                    CornerRadius="100"
                    HeightRequest="66"
                    WidthRequest="191"
                    HorizontalOptions="Center"
                    Margin="0,32,0,0"
                    Clicked="OnLoginClicked" />
        </VerticalStackLayout>

        <!-- Footer Links -->
        <VerticalStackLayout VerticalOptions="End"
                             HorizontalOptions="Center"
                             Spacing="14"
                             Margin="0,0,0,24">
            <Label Text="Регистрация"
                   TextColor="White"
                   FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegisterClicked" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Забыли пароль?"
                   TextColor="White"
                   FontSize="16">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </Grid>
    </ContentPage.Content>
</ContentPage>