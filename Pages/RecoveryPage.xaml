<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMiniApp.Pages.RecoveryPage"
             Title="RecoveryPage">
    <Grid>
        <Entry x:Name="PhoneEntry" Placeholder="Phone number"/>
        <Button Text="Send Code" Clicked="SendCodeClicked"/>
        <Entry x:Name="CodeEntry" Placeholder="SMS code"/>
        <Entry x:Name="NewPassword" Placeholder="New password" IsPassword="True"/>
        <Button Text="Reset Password" Clicked="ResetPasswordClicked"/>
    </Grid>
</ContentPage>