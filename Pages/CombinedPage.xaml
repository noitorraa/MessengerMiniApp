<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MessengerMiniApp.Pages.CombinedPage"
    BackgroundColor="{DynamicResource Primary}"
    Title="MessengerMiniApp">

    <AbsoluteLayout>
        <!-- Основная сетка: Header+Tabs + CollectionViews -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowSpacing="0"
            ColumnSpacing="0">

            <!-- Два ряда: 1) Header+Tabs, 2) Списки контента -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- === СТРОКА 0: Header + TabButtons === -->
            <Grid
                Grid.Row="0"
                BackgroundColor="{DynamicResource Primary}"
                Padding="20,5,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header row -->
                <Grid
                    Grid.Row="0"
                    ColumnDefinitions="50,*,50">
                    <Button
                        Grid.Column="0"
                        Text="&lt;"
                        FontSize="40"
                        TextColor="{DynamicResource White}"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Clicked="OnBackClicked" />

                    <Label
                        Grid.Column="1"
                        Text="MessengerMiniApp"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource White}" />

                    <Switch
                        Grid.Column="2"
                        x:Name="ThemeToggle"
                        Toggled="OnThemeToggled"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
                </Grid>

                <!-- TabButtons row -->
                <Grid
                    Grid.Row="1"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="10">
                    <Button
                        Grid.Column="0"
                        x:Name="StatusTabButton"
                        Text="Статус"
                        Clicked="OnStatusTabClicked"
                        FontSize="20"
                        TextColor="{DynamicResource Black}"
                        BackgroundColor="{DynamicResource White}"
                        CornerRadius="30"
                        HeightRequest="60"
                        HorizontalOptions="FillAndExpand" />

                    <Button
                        Grid.Column="1"
                        x:Name="ChatsTabButton"
                        Text="Чаты"
                        Clicked="OnChatsTabClicked"
                        FontSize="20"
                        TextColor="{DynamicResource White}"
                        BackgroundColor="{DynamicResource Secondary}"
                        CornerRadius="30"
                        HeightRequest="60"
                        HorizontalOptions="FillAndExpand" />
                </Grid>
            </Grid>

            <!-- === СТРОКА 1: Контент === -->
            <Border
                Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="Transparent">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,0,0" />
                </Border.StrokeShape>

                <Grid>
                <!-- Профиль пользователя (скрыт по умолчанию) -->
                <Grid 
                    x:Name="ProfileView"
                    IsVisible="False"
                    BackgroundColor="White"
                    Padding="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Аватар пользователя -->
                    <Frame
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        CornerRadius="75"
                        HeightRequest="150"
                        WidthRequest="150"
                        Padding="0"
                        IsClippedToBounds="True"
                        BorderColor="{DynamicResource Primary}"
                        Margin="0,20,0,30">
                        <Image
                            x:Name="UserAvatar"
                            Source="usericon.png"
                            Aspect="AspectFill"
                            HeightRequest="150"
                            WidthRequest="150" />
                    </Frame>

                    <!-- Кнопка изменения аватара -->
                    <Button
                        Grid.Row="1"
                        Text="Изменить аватар"
                        Clicked="OnChangeAvatarClicked"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="0,0,0,20" />

                    <!-- Поле имени пользователя -->
                    <Label
                        Grid.Row="2"
                        Text="Имя пользователя"
                        FontSize="16"
                        Margin="0,10,0,5" />
                    <Entry
                        Grid.Row="3"
                        x:Name="UsernameEntry"
                        Placeholder="Введите имя пользователя"
                        Margin="0,0,0,20" />

                    <!-- Кнопка сохранения изменений -->
                    <Button
                        Grid.Row="4"
                        Text="Сохранить изменения"
                        Clicked="OnSaveProfileClicked"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        BackgroundColor="{DynamicResource Primary}"
                        TextColor="White"
                        Margin="0,20,0,0" />
                </Grid>

                    <!-- Список чатов (виден по умолчанию) -->
                    <CollectionView
                        x:Name="ChatListView"
                        IsVisible="True"
                        SelectionMode="Single"
                        SelectionChanged="OnChatTapped"
                        Margin="0"
                        BackgroundColor="White">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <SwipeView>
                                    <SwipeView.LeftItems>
                                        <SwipeItems Mode="Execute">
                                            <SwipeItem
                                                Text="Удалить"
                                                BackgroundColor="{DynamicResource Red500}"
                                                IconImageSource="delete_icon.png"
                                                Invoked="OnDeleteChat" />
                                        </SwipeItems>
                                    </SwipeView.LeftItems>

                                    <StackLayout Spacing="0">
                                        <Grid Padding="10" BackgroundColor="{DynamicResource White}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Image
                                                Grid.Column="0"
                                                Source="{Binding Avatar}"
                                                WidthRequest="50"
                                                HeightRequest="50"
                                                Aspect="AspectFill"
                                                VerticalOptions="Center"
                                                HorizontalOptions="Center"
                                                Clip="Ellipse" />

                                            <StackLayout
                                                Grid.Column="1"
                                                Orientation="Vertical"
                                                VerticalOptions="Center"
                                                Spacing="2">
                                                <Label
                                                    Text="{Binding ChatName}"
                                                    FontAttributes="Bold"
                                                    FontSize="16"
                                                    TextColor="{DynamicResource TextColor}" />
                                                <Label
                                                    Text="{Binding LastMessage}"
                                                    FontSize="14"
                                                    TextColor="{DynamicResource SupportingTextColor}"
                                                    LineBreakMode="TailTruncation" />
                                            </StackLayout>
                                        </Grid>

                                        <BoxView
                                            HeightRequest="1"
                                            BackgroundColor="{DynamicResource Gray300}"
                                            HorizontalOptions="Fill" />
                                    </StackLayout>
                                </SwipeView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>
        </Grid>

        <!-- Плавающая кнопка поиска в правом нижнем углу (только для режима чатов) -->
        <ImageButton
            x:Name="SearchButton"
            Source="icon_search.png"
            WidthRequest="100"
            HeightRequest="100"
            Aspect="AspectFill"
            BackgroundColor="Transparent"
            Clicked="OnSearchButtonClicked"
            AbsoluteLayout.LayoutBounds="1,1,110,110"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
</ContentPage>
