<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MessengerMiniApp.Pages"
    x:Class="MessengerMiniApp.Pages.StatusPage"
    BackgroundColor="{DynamicResource Primary}"
    Title="StatusPage">

    <AbsoluteLayout>
        <!-- Основная сетка: Header+Tabs + StatusList -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowSpacing="0"
            ColumnSpacing="0">

            <!-- Два ряда: 1) Header+Tabs, 2) Список статусов -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- === СТРОКА 0: Header + TabButtons === -->
            <Grid
                Grid.Row="0"
                BackgroundColor="{DynamicResource Primary}"
                Padding="20,5,20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header row -->
                <Grid
                    Grid.Row="0"
                    ColumnDefinitions="50,*,50">
                    <Button
                        Grid.Column="0"
                        Text="  "
                        FontSize="40"
                        TextColor="{DynamicResource White}"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Clicked="OnBackClicked" />

                    <Label
                        Grid.Column="1"
                        Text="MessengerMiniApp"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="{DynamicResource White}" />

                    <Switch
                        Grid.Column="2"
                        x:Name="ThemeToggle"
                        Toggled="OnThemeToggled"
                        HorizontalOptions="End"
                        VerticalOptions="Center" />
                </Grid>

                <!-- TabButtons row -->
                <Grid
                    Grid.Row="1"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="10">
                    <Button
                        Grid.Column="0"
                        x:Name="StatusTabButton"
                        Text="Статус"
                        Clicked="OnStatusTabClicked"
                        FontSize="20"
                        TextColor="{DynamicResource White}"
                        BackgroundColor="{DynamicResource Secondary}"
                        CornerRadius="30"
                        HeightRequest="60"
                        HorizontalOptions="FillAndExpand" />

                    <Button
                        Grid.Column="1"
                        x:Name="ChatsTabButton"
                        Text="Чаты"
                        Clicked="OnChatsTabClicked"
                        FontSize="20"
                        TextColor="{DynamicResource Black}"
                        BackgroundColor="{DynamicResource White}"
                        CornerRadius="30"
                        HeightRequest="60"
                        HorizontalOptions="FillAndExpand" />
                </Grid>
            </Grid>

            <!-- === СТРОКА 1: Список статусов === -->
            <Border
                Grid.Row="1"
                StrokeThickness="0"
                BackgroundColor="Transparent">
                <CollectionView
                    x:Name="statusListView"
                    SelectionMode="Single"
                    Margin="0"
                    BackgroundColor="White">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="0">
                                <Grid Padding="10" BackgroundColor="{DynamicResource White}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Image
                                        Grid.Column="0"
                                        Source="{Binding Avatar}"
                                        WidthRequest="50"
                                        HeightRequest="50"
                                        Aspect="AspectFill"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        Clip="Ellipse" />

                                    <StackLayout
                                        Grid.Column="1"
                                        Orientation="Vertical"
                                        VerticalOptions="Center"
                                        Spacing="2">
                                        <Label
                                            Text="{Binding StatusName}"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            TextColor="{DynamicResource TextColor}" />
                                        <Label
                                            Text="{Binding StatusText}"
                                            FontSize="14"
                                            TextColor="{DynamicResource SupportingTextColor}"
                                            LineBreakMode="TailTruncation" />
                                    </StackLayout>
                                </Grid>

                                <BoxView
                                    HeightRequest="1"
                                    BackgroundColor="{DynamicResource Gray300}"
                                    HorizontalOptions="Fill" />
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </Grid>
    </AbsoluteLayout>
</ContentPage>
