<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MessengerMiniApp.Pages.RegisterPage"
             Title="Регистрация"
             BackgroundColor="{DynamicResource PrimaryColor}">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, *"
          ColumnDefinitions="*"
          Padding="20"
          RowSpacing="15"
          VerticalOptions="CenterAndExpand">

        <Image Source="app_logo.png"
               Grid.Row="0"
               HorizontalOptions="Center"
               WidthRequest="100"
               HeightRequest="100"
               Margin="0,20,0,0"/>

        <Frame CornerRadius="10"
               Padding="10"
               BackgroundColor="{DynamicResource SecondaryColor}"
               Grid.Row="1">
            <Entry x:Name="UsernameEntry"
                   Placeholder="Login"
                   PlaceholderColor="LightGray"
                   TextColor="White"
                   BackgroundColor="Transparent"/>
        </Frame>

        <Frame CornerRadius="10" Padding="10" BackgroundColor="{DynamicResource SecondaryColor}" Grid.Row="2">
            <Entry x:Name="PhoneEntry" Placeholder="+7XXXXXXXXXX" Keyboard="Telephone"/>
        </Frame>

        <Frame CornerRadius="10"
               Padding="10"
               BackgroundColor="{DynamicResource SecondaryColor}"
               Grid.Row="3">
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   PlaceholderColor="LightGray"
                   TextColor="White"
                   BackgroundColor="Transparent"/>
        </Frame>

        <Frame CornerRadius="10"
               Padding="10"
               BackgroundColor="{DynamicResource SecondaryColor}"
               Grid.Row="4">
            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Confirm Password"
                   IsPassword="True"
                   PlaceholderColor="LightGray"
                   TextColor="White"
                   BackgroundColor="Transparent"/>
        </Frame>

        <Grid Grid.Row="5" ColumnDefinitions="*, Auto" Margin="0,10">
            <Entry x:Name="CodeEntry" 
                   Placeholder="SMS code"
                   Grid.Column="0"
                   Margin="0,0,10,0"/>
            <Button Text="Подтвердить"
                    x:Name="ConfirmBtn"
                    Clicked="ConfirmRegistrationClicked"
                    Grid.Column="1"
                    BackgroundColor="{DynamicResource AccentColor}"
                    TextColor="White"
                    CornerRadius="10"
                    Padding="20,10"/>
        </Grid>

        <Button Text="Отправить код"
                Clicked="OnSendCodeClicked"
                BackgroundColor="{DynamicResource AccentColor}"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                Grid.Row="6"/>

        <Button Text="Зарегистрироваться"
                x:Name="regBtn"
                Clicked="OnRegisterClicked"
                BackgroundColor="{DynamicResource AccentColor}"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                Grid.Row="7"/>
    </Grid>
</ContentPage>
