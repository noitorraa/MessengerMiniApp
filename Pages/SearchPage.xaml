<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MessengerMiniApp.Pages.SearchPage"
    BackgroundColor="{DynamicResource Primary}"
    Title="Поиск">
    
    <AbsoluteLayout>
        <!-- Основная сетка -->
        <Grid
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            RowSpacing="0"
            ColumnSpacing="0">
            
            <!-- Ряды: Header + Поиск + Результаты -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Заголовок -->
                <RowDefinition Height="Auto"/> <!-- Поле поиска -->
                <RowDefinition Height="*"/>    <!-- Результаты -->
            </Grid.RowDefinitions>
            
            <!-- === СТРОКА 0: Заголовок === -->
            <Grid
                Grid.Row="0"
                BackgroundColor="{DynamicResource Primary}"
                Padding="20,5,20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                
                <Button
                    Grid.Column="0"
                    Text="&lt;"
                    FontSize="40"
                    TextColor="{DynamicResource White}"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnBackClicked" />
                
                <Label
                    Grid.Column="1"
                    Text="MessengerMiniApp"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="{DynamicResource White}" />
                
                <Switch
                    Grid.Column="2"
                    x:Name="ThemeToggle"
                    Toggled="OnThemeToggled"
                    HorizontalOptions="End"
                    VerticalOptions="Center" />
            </Grid>
            
            <!-- === СТРОКА 1: Поле поиска === -->
            <StackLayout
                Grid.Row="1"
                Padding="20,10"
                BackgroundColor="{DynamicResource White}">
                <Entry
                    x:Name="SearchEntry"
                    Placeholder="Поиск..."
                    PlaceholderColor="{DynamicResource SupportingTextColor}"
                    TextColor="{DynamicResource SupportingTextColor}"
                    FontFamily="Roboto"
                    FontSize="16"
                    Margin="8,0"
                    BackgroundColor="Transparent"
                    TextChanged="OnSearchTextChanged"/>
            </StackLayout>
            
            <!-- === СТРОКА 2: Результаты поиска === -->
            <Border
                Grid.Row="2"
                StrokeThickness="0"
                BackgroundColor="White">

                <!-- Используем Grid для наложения ActivityIndicator поверх CollectionView -->
                <Grid>
                    <!-- CollectionView с результатами -->
                    <CollectionView
                        x:Name="searchResultsListView"
                        SelectionMode="Single"
                        SelectionChanged="OnUserTapped"
                        Margin="0"
                        BackgroundColor="White">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Spacing="0">
                                    <Grid Padding="20,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Image
                                            Grid.Column="0"
                                            Source="{Binding avatar}"
                                            WidthRequest="50"
                                            HeightRequest="50"
                                            Aspect="AspectFill"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            Clip="Ellipse" />

                                        <StackLayout
                                            Grid.Column="1"
                                            Orientation="Vertical"
                                            VerticalOptions="Center"
                                            Spacing="2">
                                            <Label
                                                Text="{Binding login}"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                TextColor="{DynamicResource TextColor}" />
                                            <Label
                                                Text="Начать диалог"
                                                FontSize="14"
                                                TextColor="{DynamicResource SupportingTextColor}" />
                                        </StackLayout>
                                    </Grid>

                                    <BoxView
                                        HeightRequest="1"
                                        BackgroundColor="{DynamicResource Gray300}"
                                        HorizontalOptions="Fill" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Индикатор загрузки -->
                    <ActivityIndicator
                        x:Name="searchActivityIndicator"
                        IsVisible="False"
                        IsRunning="False"
                        Color="{DynamicResource Primary}"
                        VerticalOptions="Center"
                        HorizontalOptions="Center" />
                </Grid>
            </Border>
        </Grid>
        
</AbsoluteLayout>
</ContentPage>
